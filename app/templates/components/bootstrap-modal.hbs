<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <div class="modal-body">
          <div class="form-group">
              <label for="graph-select"> Select Graph </label>
              <select class="form-control" id="graph-select">
                  {{#each components as |opt|}}
                      <option value={{opt.value}}>{{opt.label}}</option>
                  {{else}}
                      <option>No Graphs Available</option>
                  {{/each}}
              </select>
          </div>
          <div class="form-group">
              <label for="x-pos">X:</label>
              <input class="form-control" id="x-pos" value={{compX}}>
              <label for="x-pos">Y:</label>
              <input class="form-control" id="y-pos" value={{compY}}>
              <label for="graph-width">Width:</label>
              <input class="form-control" id="graph-width" value={{width}}>
              <label for="graph-height">Height:</label>
              <input class="form-control" id="graph-height" value={{height}}>
          </div>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal" {{action "cancel"}}>Close</button>
          <button type="button" class="btn btn-default" data-dismiss="modal" {{action "save"}}>Save</button>
      </div>
    </div>
  </div>
</div>

<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">{{headerTitle}}</h4>
      </div>
      <div class="modal-body">
          {{#if showCreate}}
              <div class="form-group">
                  <label for="graph-select"> Select Graph </label>
                  <select class="form-control" id="graph-select">
                      {{#each components as |opt|}}
                          <option value={{opt.value}}>{{opt.label}}</option>
                      {{else}}
                          <option>No Graphs Available</option>
                      {{/each}}
                  </select>
              </div>
              <div class="form-group">
                  <label for="x-pos">X:</label>
                  <input class="form-control" id="x-pos" size="6" value={{px}}>
                  <label for="x-pos">Y:</label>
                  <input class="form-control" id="y-pos" size="6" value={{py}}>
                  <label for="graph-width">Width:</label>
                  <input class="form-control" id="graph-width" size="6" value={{width}}>
                  <label for="graph-height">Height:</label>
                  <input class="form-control" id="graph-height" size="6" value={{height}}>
              </div>
          {{/if}}
          {{#if showEdit}}
              <div class="form-group">
                  <label for="x-pos">X:</label>
                  <input class="form-control" id="x-pos" size="6" value={{px}}>
                  <label for="x-pos">Y:</label>
                  <input class="form-control" id="y-pos" size="6" value={{py}}>
                  <label for="graph-width">Width:</label>
                  <input class="form-control" id="graph-width" size="6" value={{width}}>
                  <label for="graph-height">Height:</label>
                  <input class="form-control" id="graph-height" size="6" value={{height}}>
              </div>
          {{/if}}
          <div class="form-group">
              <label for="file-location">Data File:</label>
              <input class="form-control" id="file-location" size="6" value="./data/file.json">
          </div>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal" {{action "cancel"}}>Close</button>
          <button type="button" class="btn btn-default" data-dismiss="modal" {{action "save"}}>Save</button>
          {{#if showEdit}}
              <button type="button" class="btn btn-default" data-dismiss="modal" {{action "deleteGraph"}}>Delete</button>
          {{/if}}
      </div>
    </div>
  </div>
</div>
